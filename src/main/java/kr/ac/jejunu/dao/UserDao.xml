	<select id="findAll" resultType="User">
		select password from users where userId = #{id}
	</select>
	
	<insert id="insert" parameterType="User">
		insert into
		users(userId, name, password, userType) values(#{id}, #{name}, #{password}, #{userType})
	</insert>
	
	<select id="findById" resultType="int">
		select count(*) from users where userId = #{id}
	</select>
	
	<select id="loginFindUser" resultType="String">
		select name from users where userId = #{id} and password = #{password}
	</select>
